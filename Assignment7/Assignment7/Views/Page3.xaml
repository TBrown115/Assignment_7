<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment7.Views.Page3"
             Title="STATUS">
    <ContentPage.Content>

        <StackLayout BackgroundColor="White">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"></RowDefinition>


                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"></ColumnDefinition>
                    <ColumnDefinition Width="260"></ColumnDefinition>
                    <ColumnDefinition Width="35"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Frame Padding="0"
                       Margin="0,15,0,0"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="StartAndExpand"
                    CornerRadius="60"
                    IsClippedToBounds="True"
                    HeightRequest="65"
                    WidthRequest="55"
                    >
                    <Image Source="dpss.png" Grid.Row="0" Grid.Column="0" VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"/>
                </Frame>
                <Label Text="My status" Grid.Row="0" Grid.Column="1" TextColor="Black" FontSize="18" Padding="0,23,0,0"/>
                <Label Text="Today, 20:00" TextColor="Black" Grid.Row="0" Grid.Column="1" FontSize="16" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Padding="0,0,100,0"></Label>
                <ImageButton Source="more.png" Grid.Row="0" Grid.Column="2" BackgroundColor="White" HeightRequest="30"/>
            </Grid>
            <Label Text="Recent updates" TextColor="Black" BackgroundColor="WhiteSmoke" HorizontalTextAlignment="Start" Padding="9" Margin="0,-40,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

